<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antypaymentguard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.activeandroid.app.Application">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignInToBankActivity"
            android:label="@string/title_activity_sign_in_to_bank"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.antypaymentguard.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddBankAccountActivity"
            android:label="@string/title_activity_add_bank_account"
            android:parentActivityName=".activities.SignInToBankActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SignInToBankActivity" />
        </activity>
        <meta-data
            android:name="AA_DB_NAME"
            android:value="AG.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.antypaymentguard.models.Bank,
            com.antypaymentguard.models.BankAccount,
            com.antypaymentguard.models.Transaction,
            com.antypaymentguard.models.conditions.Condition,
            com.antypaymentguard.models.conditions.AmountCondition,
            com.antypaymentguard.models.conditions.NumberCondition" />
    </application>

</manifest>